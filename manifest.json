{
  "manifest_version": 3,
  "name": "Invoice Downloader",
  "version": "1.0",
  "description": "Downloads invoices automatically from Orange, FreeMobile, OpenAI...",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "tabs",
    "webNavigation",
    "webRequest",
    "debugger"
  ],
  "background": {
    "service_worker": "worker/service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "ui/popup.html"
  },
  "options_page": "ui/options.html",
  "host_permissions": [
    "https://mobile.free.fr/*",
    "https://espace-client.orange.fr/*",
    "https://*.openai.com/*",
    "https://*.stripe.com/*",
    "https://*.auchantelecom.fr/*",
    "https://*.aliexpress.com/*",
    "https://www.helloasso.com/*",
    "https://www.leboncoin.fr/*"
  ],
  "icons": {
    "128": "icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["content/monkeyPatchFetch.js", "content/utils.js"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "world": "ISOLATED",
      "matches": ["https://www.leboncoin.fr/*"],
      "js": ["content/utils.js","lib/jspdf.umd.min.js","suppliers/leboncoinfr_content_manifest.js"],
      "run_at": "document_start"
    },
    {
    "world": "MAIN",
    "matches": ["https://www.leboncoin.fr/*"],
    "js": ["content/utils.js","content/monkeyPatchFetch.js", "suppliers/leboncoinfr_content_world.js"],
    "run_at": "document_start"
  }],
  "externally_connectable": {
    "matches": ["https://www.leboncoin.fr/*"]
  }
}
