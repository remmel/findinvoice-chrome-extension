{
  "manifest_version": 3,
  "name": "Free Mobile Invoice Downloader",
  "version": "1.0",
  "description": "Downloads invoices from Free Mobile account.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://mobile.free.fr/*",
    "https://espace-client.orange.fr/*"
  ],
  "icons": {
    "128": "icon128.png"
  }
}
