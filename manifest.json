{
  "manifest_version": 3,
  "name": "Invoice Downloader - crxjs",
  "version": "1.0",
  "description": "Downloads invoices automatically from Orange, FreeMobile, OpenAI...",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "tabs",
    "webNavigation",
    "webRequest",
    "debugger"
  ],
  "background": {
    "service_worker": "src/worker/service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/ui/popup.html"
  },
  "options_page": "src/ui/options.html",
  "host_permissions": [
    "https://mobile.free.fr/*",
    "https://espace-client.orange.fr/*",
    "https://*.openai.com/*",
    "https://*.stripe.com/*",
    "https://*.auchantelecom.fr/*",
    "https://*.aliexpress.com/*",
    "https://www.helloasso.com/*",
    "https://www.leboncoin.fr/*"
  ],
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "world": "ISOLATED",
      "matches": ["https://www.leboncoin.fr/*"],
      "js": ["src/content/utils.js","src/suppliers/leboncoinfr_content_manifest.js"],
      "run_at": "document_start"
    },
    {
    "world": "MAIN",
    "matches": ["https://www.leboncoin.fr/*"],
    "js": ["src/content/utils.js","src/content/monkeyPatchFetch.js", "src/suppliers/leboncoinfr_content_world.js"],
    "run_at": "document_start"
  }],
  "externally_connectable": {
    "matches": ["https://www.leboncoin.fr/*"]
  },
  "web_accessible_resources": [{
    "matches": ["https://www.dumb-to-force-copying-images-in-build.com/*"],
    "resources": ["src/content/utils.js", "src/suppliers/*"]
  }]
}
